<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_scroll_view"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/review_text_view"
        style="@style/TextViewValueStyle"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="Breathtaking movie" />

    <TextView
        android:id="@+id/review_author_text_view"
        style="@style/TextViewValueStyle"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/review_text_view"
        tools:text="Author" />

    <Button
        android:id="@+id/full_review_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_button"
        app:layout_constraintTop_toBottomOf="@id/review_author_text_view" />
</android.support.constraint.ConstraintLayout>